<Window x:Class="WpfApp4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="736">
    <Grid Background="Beige">
        <Grid.Resources>
            <Style TargetType="Label" x:Key="st1">
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="FontFamily" Value="Times New Roman"/>
            </Style>
        </Grid.Resources>

        <Label Content="Quan ly nhan vien" HorizontalAlignment="Center" Height="42" Margin="0,26,0,0" VerticalAlignment="Top" Width="474" RenderTransformOrigin="0.549,0.426" Style="{DynamicResource st1}"/>
