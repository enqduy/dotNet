        <Label Content="Loai nhan vien" HorizontalAlignment="Left" Height="50" Margin="73,123,0,0" VerticalAlignment="Top" Width="100"/>
        <Label Content="Ngay sinh" HorizontalAlignment="Left" Height="50" Margin="73,173,0,0" VerticalAlignment="Top" Width="100"/>
        <Label Content="So tien ban hang" HorizontalAlignment="Left" Height="50" Margin="73,223,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBox Name="txtTen" HorizontalAlignment="Left" Height="25" Margin="248,73,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="190"/>
        <ComboBox Name="cbL" HorizontalAlignment="Left" Height="25" Margin="248,123,0,0" VerticalAlignment="Top" Width="190" SelectedIndex="0">
            <ComboBoxItem>Co Huu</ComboBoxItem>
            <ComboBoxItem>Hop Dong</ComboBoxItem>
            <ComboBoxItem>Cong Tac Vien</ComboBoxItem>
        </ComboBox>
        <DatePicker Name="dNgay" HorizontalAlignment="Left" Height="29" Margin="248,169,0,0" VerticalAlignment="Top" Width="190"/>
        <TextBox Name="txtT" HorizontalAlignment="Left" Height="25" Margin="248,223,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="190"/>
        <ListBox Name="listbox" HorizontalAlignment="Left" Height="97" Margin="73,256,0,0" VerticalAlignment="Top" Width="534" SelectionChanged="listbox_SelectionChanged"/>
        <Button Content="Nhap" HorizontalAlignment="Left" Height="25" Margin="108,380,0,0" VerticalAlignment="Top" Width="90" Click="Button_Click"/>
        <Button Content="Xoa" HorizontalAlignment="Left" Height="25" Margin="306,380,0,0" VerticalAlignment="Top" Width="90" Click="Button_Click_1"/>
        <Button Content="Window2" HorizontalAlignment="Left" Height="25" Margin="517,380,0,0" VerticalAlignment="Top" Width="90" Click="Button_Click_2"/>

    </Grid>
</Window>
